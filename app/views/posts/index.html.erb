<p id="notice"><%= notice %></p>

<h1 class="blogHeader">What You Need to Know</h1>

<div class="container blogBody">
  <div class="row">
    <div class="col-md-4">
      Title
    </div>
    <div class="col-md-6">
      Entry
    </div>
    <div class="col-md-2">
    </div>
  </div>
 
 <div class="row">
    <% @posts.each do |post| %>

   <div class="col-md-4">
      <p><%= post.title %> </p>
       <p>by <%= post.user.username %></p>
    </div>
    <div class="col-md-6 blogBorder">
      <%= post.entry %>
    </div>
    <div class="col-md-2">
      <%= link_to 'Show', post %>
       <% if can? :update, post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    </div>
 <% end %>
 </div>
 <%= link_to 'New Post', new_post_path, class: "btn btn" %>

 <div>
   <% @posts.each do |post| %>
   <div class="row">
      <div class="md-9">
        <div class="panel panel-primary">
          <div class="panel-heading panel-primary">
            <p><%= post.title %> by <%= post.user.username %></p>
          </div>
          <div class="panel panel-body">
            <p><%= post.entry %></p>
          </div>
        </div>
      </div>
      <div class="md-3">
        <div class="panel panel-info">
          <%= link_to 'Show', post %>
       <% if can? :update, post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
      </div>
   </div>
 </div>
 <% end %>
</div>





